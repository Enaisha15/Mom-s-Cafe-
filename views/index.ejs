            <p id="orderFor">order for</p>
            <p id="name">...</p>
            <p id="orderDetails">order details</p>

        </section> -->

        <section class="signInorsignUp">
            <img src='cafe.png' id="coffeePic"><br>
            <a href="/login" class="btn btn-default "><span class="fa fa-user "></span> Barista Login</a>
            <a href="/signup" class="btn btn-default log"><span class="fa fa-user log"></span> BaristaSignup</a>
        </section>
        <section class="buttons">
            <input class="customerName" oninput="customerNameInput" placeholder="enter customer's name">
            <section id="size">
                <button onclick='clickButton(event)'>tall</button>
                <button onclick='clickButton(event)'>grande</button>
                <button onclick='clickButton(event)'>venti</button>
            </section>
            <section id="roast">
                <button onclick='clickButton(event)'>light</button>
                <button onclick='clickButton(event)'>medium</button>
                <button onclick='clickButton(event)'>dark</button>
            </section>
            <section id="coffee">
                <button onclick='clickButton(event)'>coffee ‚òï </button>
                <button onclick='clickButton(event)'>cold brew</button>
                <button onclick='clickButton(event)'>latte</button>
                <button onclick='clickButton(event)'>espresso shot</button>
                <button onclick='clickButton(event)'>cappucino</button>
                <button onclick='clickButton(event)'>frappucino</button>
            </section>
            <section id="tea">
                <button onclick='clickButton(event)'>green tea üçµ </button>
                <button onclick='clickButton(event)'>black tea</button>
                <button onclick='clickButton(event)'>other tea</button>
            </section>
            <section id="custom">
                <button onclick='clickButton(event)'>decaf</button>
                <button onclick='clickButton(event)'>iced</button>
                <button onclick='clickButton(event)'>hot</button>
                <button onclick='clickButton(event)'>milk</button>
                <button onclick='clickButton(event)'>sugar</button>
                <button onclick='clickButton(event)'>dairy-free sub</button>
                <button onclick='clickButton(event)'>add syrup</button>
                <button onclick='clickButton(event)'>no whip</button>
            </section>

            <input class="customerOrder" oninput="customerInstruction" placeholder="special instructions">
            <button class="submit" type=submit onclick="addOrder()">Place Order</button>
        </section>
    </section>



    <h4 class="thanks"></h4>
</body>
