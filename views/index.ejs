    }
    .buttons{
        float:right;
        width:60%;
        margin-top:-5%;
    }
    #size button{
    background-color: rgb(189,185,176);
    }
    #roast button{
    background-color: rgb(189,185,176);
    }
    #size,
    #coffee button{
        margin-bottom:1%;
    }
    #coffee button{
        background-color: rgb(177,72,51);
        width:47%;
        margin-bottom:2.6%;
        margin-right:2%;
    }
    #size button,
    #roast button{
        width:30.6%;
        margin:auto;
        margin-right:2%;
        margin-bottom:.5%;
    }
    #coffee{
        width:35%;
        float:left;
        margin-top:1.5%;
    }
    #tea{
        width:15%;
